<div class="container"> 
    <h1>Course Offer</h1>
    <div class="card">
        <div class="card-body text-center">
            <h4>Term</h4>
            <input id="Term" class="form-control text-center" name="Term" type="text" />
            <h4>Course Code - Course Name</h4>
            <input type="text" readonly class="form-control-plaintext text-center" id="staticCourse" value="Course Code | Course Name">
            <h4>Choose a Academician</h4>
            <select class="form-select text-center" aria-label="Default select example">
              <option selected>AcademicianName AcademicianSurname</option>
              <option value="AcademicianId">AcademicianName AcademicianSurname</option>
              <option value="AcademicianId">AcademicianName AcademicianSurname</option>
              <option value="AcademicianId">AcademicianName AcademicianSurname</option>
            </select>
            <h4>Choose a Department</h4>
            <select class="form-select text-center" aria-label="Default select example">
              <option selected>Department Name</option>
              <option value="DepartmentId">Department Name</option>
              <option value="DepartmentId">Department Name</option>
              <option value="DepartmentId">Department Name</option>
            </select>
            <h4>Semester Count</h4>
            <!-- form-group// -->
            <label id="semesterLabel" for="Semester" class="px-1 mb-1">Semester Count</label>
            <input id="Semester" name="SemesterCount" class="form-control px-2" placeholder="Semester" min="0" max="16" step="1" value="1" oninput="    semesterFunction(this.value);" type="range">
            <!-- Button Group-->
        </div>
    </div>
</div>